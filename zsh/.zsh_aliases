#aliases for efficiency
alias ins="sudo apt install -y"
alias rem="sudo apt purge -y"
alias ls='ls --color=always'
alias ll="clear && ls --color=always -rthla"
alias grep="grep --color=auto"
alias tools="cd /opt/tools && ll"
alias locky="python /opt/tools/locky.py"
alias pentestlab="/opt/tools/pentestlab/pentestlab.sh"
alias zoom="zoom </dev/null &>/dev/null &"
alias nessus="firefox https://localhost:11127/ </dev/null &>/dev/null &"
alias xclip="xclip -selection clipboard"
alias nvim="nvim +COQnow"
alias vim="nvim +COQnow"
alias ctf="cd $HOME/ctf && ll"
